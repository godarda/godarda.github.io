---
layout: none
permalink: /search.json
---
[
{%- assign first = true -%}
{%- for page in site.html_pages -%}
    {%- if page.title -%}
        {%- unless page.url == "/search.json" or page.url == "/404.html" or page.url contains "/assets/" -%}
            {%- if first == false -%},{%- endif -%}
            {%- assign first = false -%}
            {%- assign parts = page.url | split: '/' -%}
            {%- assign cat = parts[1] | default: "other" -%}
            { "title": {{ page.title | jsonify }}, "href": {{ page.url | jsonify }}, "category": {{ cat | jsonify }}, "content": {{ page.content | strip_html | strip_newlines | jsonify }} }
        {%- endunless -%}
    {%- endif -%}
{%- endfor -%}
]