<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splashContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:visibility="visible">

    <!-- This spacer pushes the content down from the top -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- This container groups the logo box and the progress bar for centering -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- This FrameLayout is the gray rounded square box (for the logo only) -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/rounded_background">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:contentDescription="@string/logo"
                android:src="@mipmap/ic_launcher" />
        </FrameLayout>

        <!-- This horizontal layout contains the progress bar, constrained to 50% width -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.25" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/logoProgressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:indeterminate="true"
                app:indicatorColor="@color/progressBarColor"
                app:trackColor="#e0e0e0"
                app:trackCornerRadius="5dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.25" />
        </LinearLayout>

    </LinearLayout>

    <!-- This spacer balances the space above the version text -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Version Text at the Bottom -->
    <TextView
        android:id="@+id/appversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        tools:text="App Version 1.0" />

</LinearLayout>